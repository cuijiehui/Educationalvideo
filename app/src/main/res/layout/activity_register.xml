<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.LoginActivity"
        android:orientation="vertical"
        >

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/c33000000"
            >
        <RelativeLayout
                android:id="@+id/rg_btn_back"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:gravity="center"
                >
            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/btn_back"/>
        </RelativeLayout>
        <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="注册"
                android:textSize="20sp"
                android:textColor="@color/c000000"
                android:gravity="center"

                />

    </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="账号"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/c000000"
                />
        <EditText
                android:id="@+id/rg_user_name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
            <ImageView
                    android:id="@+id/rg_user_name_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@mipmap/login_close"
                    />
        </RelativeLayout>
    </LinearLayout>
    <View
            android:id="@+id/rg_name_background"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c06EB00"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:layout_marginRight="12dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="密码"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/c000000"
                />
        <EditText
                android:id="@+id/rg_user_password"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:inputType="numberPassword"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
            <ImageView
                    android:id="@+id/rg_ps_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@mipmap/login_close"
                    />
        </RelativeLayout>
    </LinearLayout>
    <View
            android:id="@+id/rg_ps_background"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c06EB00"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:layout_marginRight="12dp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            >
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:text="确认密码"
                android:gravity="center"
                android:textSize="18sp"
                android:textColor="@color/c000000"
                />
        <EditText
                android:id="@+id/rg_ps_again"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:inputType="numberPassword"
                android:background="@null"
                android:textCursorDrawable="@drawable/shape_edit_cursor"
                />
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                >
            <ImageView
                    android:id="@+id/rg_ps_again_clean"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:background="@mipmap/login_close"
                    />
        </RelativeLayout>
    </LinearLayout>
    <View
            android:id="@+id/rg_ps_background_again"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/c06EB00"
            android:layout_marginLeft="12dp"
            android:visibility="gone"
            android:layout_marginRight="12dp"/>
    <Button
            android:id="@+id/to_register"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_margin="12dp"
            android:text="注册"
            android:textSize="20sp"
            android:background="@drawable/selector_btn_click"
            />

</LinearLayout>