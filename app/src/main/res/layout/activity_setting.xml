<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        >
    <data>
        <import type="com.example.educationalvideo.viewModel.SettingModel"/>
        <variable
                name="settingModel"
                type="SettingModel"
                />
    </data>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".SettingActivity"
            android:orientation="vertical"
            android:background="@color/c22000000"
            >
        <include layout="@layout/include_title_layout"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@color/cffffff"
                >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="全屏视频"
                    android:textSize="18sp"
                    android:textColor="@color/c000000"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="24dp"
                    />

            <com.example.educationalvideo.view.SwitchButton
                    android:id="@+id/switch_button"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="24dp"
                    app:switchState="@{settingModel.switch}"
                    app:circle2Bgmargin="3dp"
                    app:selectedBg="#11bf40"
                    app:unselectedBg="#46636262"
                    />
        </RelativeLayout>
        <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="清除缓存"
                android:textSize="18sp"
                android:textColor="@color/c000000"
                android:gravity="center"
                android:background="@color/cffffff"
                android:layout_marginTop="1dp"
                />
        <TextView
                android:id="@+id/login_logout"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:textSize="18sp"
                android:textColor="@color/c000000"
                android:gravity="center"
                android:background="@color/cffffff"
                android:layout_marginTop="12dp"
                app:logout="@{settingModel.logoutText}"
                />
    </LinearLayout>
</layout>
